<%- include ("../partials/header")%>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Créer un nouveau camping</h1>
    <div style="width: 30%; margin: 25px auto">
      <form action="/campgrounds" method="post">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="name"
            id="name"
            placeholder="Nom du camping"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            name="price"
            id="price"
            placeholder="Coût de la nuit"
            min="0.01"
            step="0.01"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="image"
            id="image"
            placeholder="image url"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="description"
            id="description"
            placeholder="Description"
          />
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">
          Soumettre!
        </button>
      </form>
      <a href="/campgrounds"> Retour </a>
    </div>
  </div>
</div>

<%- include ("../partials/footer")%>
